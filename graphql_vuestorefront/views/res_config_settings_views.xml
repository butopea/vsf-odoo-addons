<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_info_settings']" position="after">
                <block title="Vue Storefront" id="website_vue_storefront">
                    <setting help="Enable the debug mode. Will log headers, queries and mutations information" id="vsf_debug_mode_settings">
                        <field name="vsf_debug_mode"/>
                    </setting>
                    <setting id="vsf_payment_return_url_settings">
                        <field name="vsf_payment_success_return_url"/>
                    </setting>
                    <setting id="vsf_payment_return_url_settings">
                        <field name="vsf_payment_error_return_url"/>
                    </setting>
                    <setting title="Enable the Cache Invalidation" id="vsf_cache_invalidation_settings">
                        <field name="vsf_cache_invalidation"/>
                        <div class="content-group" invisible="not vsf_cache_invalidation">
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="vsf_cache_invalidation_key"/>
                                    <field name="vsf_cache_invalidation_key"
                                            required="vsf_cache_invalidation" t-translation="off"/>
                                </div>
                                <div class="row mt16">
                                    <label class="col-lg-3 o_light_label" for="vsf_cache_invalidation_url"/>
                                    <field name="vsf_cache_invalidation_url"
                                            required="vsf_cache_invalidation" t-translation="off"/>
                                </div>
                        </div>
                    </setting>
                    <setting id="vsf_mailing_list_id_settings">
                        <field name="vsf_mailing_list_id"/>
                    </setting>
                    <setting title="Image Processing" id="vsf_image_processing_settings">
                        <div class="content-group">
                            <div class="row mt16">
                                <label class="o_light_label col-lg-3" string="Sales Team" for="vsf_image_quality"/>
                                <field name="vsf_image_quality"/>
                            </div>
                            <div class="row">
                                <label class="o_light_label col-lg-3" for="vsf_image_background_rgba"/>
                                <field name="vsf_image_background_rgba"/>
                            </div>
                             <div class="row">
                                <label class="o_light_label col-lg-3" for="vsf_image_resize_limit"/>
                                <field name="vsf_image_resize_limit"/>
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>

    <menuitem name="Menu"
              id="website.menu_website_menu_list"
              action="website.action_website_menu"
              parent="website.menu_website_global_configuration"
              sequence="45"
              groups="base.group_no_one"/>

    <menuitem name="Mega Menu"
              id="menu_website_mega_menu_list"
              action="graphql_vuestorefront.action_website_mega_menu"
              parent="website.menu_website_global_configuration"
              sequence="46"
              groups="base.group_no_one"/>

    <menuitem name="Footer"
              id="menu_website_footer_list"
              action="graphql_vuestorefront.action_website_footer"
              parent="website.menu_website_global_configuration"
              sequence="47"
              groups="base.group_no_one"/>

</odoo>
